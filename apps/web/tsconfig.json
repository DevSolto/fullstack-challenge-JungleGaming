{
  "extends": "../../packages/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "target": "ES2023",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": ["src"]
}
